<Window x:Class="TravelAgencyView.WindowMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgencyView"
        mc:Ignorable="d"
        Title="WindowMain" Height="450" Width="800">
    <Grid>

        <Menu Grid.Row="0" VerticalAlignment="Top" FontSize="16">
            <MenuItem Name="Tour" Header="Туры" Click="Tour_Click" />
            <MenuItem Name="Excursion" Header="Экскурсии" Click="Excursion_Click"/>
            <MenuItem Name="Group" Header="Группы" Click="Group_Click"/>
            <MenuItem Name="Trip" Header="Поездки" Click="Trip_Click"/>
            <MenuItem Name="Guide" Header="Экскурсоводы" Click="Guide_Click"/>
            <MenuItem Name="Place" Header="Места" Click="Place_Click"/>
            <MenuItem Name="GetList" Header="Получение отчёта">
                <MenuItem Name="GuidePlaceReport" Header="Получение отчёта" Click="GuidePlaceReport_Click"></MenuItem>
                <MenuItem Name="TourReport" Header="Получение отчёта" Click="TourReport_Click"></MenuItem>
            </MenuItem>
            <MenuItem Name="RegOrAut" Header="Вход"  HorizontalAlignment="Right" Click="RegOrAut_Click"></MenuItem>
        </Menu>

    </Grid>
</Window>
