<Window x:Class="TravelAgencyView.WindowTours"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgencyView"
        mc:Ignorable="d"
        Title="Туры" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dataGridView" Grid.Column="0" Margin="10" Background="AliceBlue">

        </DataGrid>

        <StackPanel Grid.Column="1" Orientation="Vertical">
            <Button x:Name="buttonAdd" Margin="10,10,10,5" Height="25" Background="AliceBlue" Click="buttonAdd_Click">Добавить</Button>
            <Button x:Name="buttonUpd" Margin="10,10,10,5" Height="25" Background="AliceBlue" Click="buttonUpd_Click">Изменить</Button>
            <Button x:Name="buttonDel" Margin="10,10,10,5" Height="25" Background="AliceBlue" Click="buttonDel_Click">Удалить</Button>
        </StackPanel>

    </Grid>
</Window>
