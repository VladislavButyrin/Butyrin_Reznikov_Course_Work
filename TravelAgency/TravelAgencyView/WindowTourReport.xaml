<Window x:Class="TravelAgencyView.WindowTourReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgencyView"
        mc:Ignorable="d"
        Title="Отчёт по турам" Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Button x:Name="buttonSave" Grid.Row="0" Height="25" Width="120" Margin="10" HorizontalAlignment="Center" Click="buttonSave_Click">Сохранить в ПДФ</Button>
        <DataGrid x:Name="dataGridView" Grid.Row="1" Margin="20"></DataGrid>

    </Grid>
</Window>
