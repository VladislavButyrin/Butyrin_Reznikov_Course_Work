<Window x:Class="TravelAgencyView.GuidesReportFrame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgencyView"
        mc:Ignorable="d"
        Title="Отчёт по гидам" Height="250" Width="378.4" Loaded="GuidesReportFrame_Load">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0" x:Name="CanSelectedTripsListBox" SelectionMode="Extended" Margin="10">
        </ListBox>
        <StackPanel Orientation="Vertical" Grid.Column="1">
            <Button x:Name="WordButton" Grid.Column="0" Margin="10" Padding="3,3,3,3" Click="WordButton_Click" Grid.ColumnSpan="2">Word</Button>
            <Button x:Name="ExcelButton" Margin="10" Padding="3,3,3,3" Click="ExcelButton_Click" Grid.ColumnSpan="2">Excel</Button>
            <Button x:Name="CancelButton" Margin="10" Padding="3,3,3,3" Click="CancelButton__Click" Grid.ColumnSpan="2">Отмена</Button>
        </StackPanel>
    </Grid>
</Window>
