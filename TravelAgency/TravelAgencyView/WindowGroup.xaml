<Window x:Class="TravelAgencyView.WindowGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgencyView"
        mc:Ignorable="d"
        Title="WindowGroup" Height="100" Width="300">
    <Grid>
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical">
            <TextBlock x:Name="Name" Margin="10">

            </TextBlock>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <Label Margin="0,5,0,0" HorizontalAlignment="Center">Выберите тур</Label>
            <Button x:Name="buttonSave" Margin="5,20,5,5">Сохранить</Button>
        </StackPanel>
        
    </Grid>
</Window>
